<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_instagram"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/icon_instagram"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/btn_twitter"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/twitter_icon"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/btn_facebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/facebook"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/btn_mail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/email"
            android:contentDescription="TODO" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/opticsAcces"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_remove_red_eye_24"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/btn_opticas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_light"
        android:padding="10dp"
        android:text="Ver ópticas "
        app:backgroundTint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_takealook" />

    <TextView
        android:id="@+id/opticsAcces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/roboto_light"
        android:text="Acceso ópticas"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textIsSelectable="true" />

    <ImageView
        android:id="@+id/logo_takealook"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opticsAcces"
        app:srcCompat="@drawable/logo"
        android:contentDescription="TODO" />
</androidx.constraintlayout.widget.ConstraintLayout>